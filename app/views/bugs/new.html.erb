<div class="container">
  <div class="row form-row">
    <div class="col-xs-12 col-md-4 col-lg-4">
      <div class="form-login">
        <h2 class= "text-center">Create a new bug</h2>
        <%= simple_form_for [@bug] do |f| %>
          <div class="form-inputs">
            <%= f.input :title %>
            <%= f.input :description %>
              <%= f.input_field :severity, label: false, type: "text", collection: Bug::SEVERITIES, :prompt => "Bug Severity"    %>
            <%= f.input_field :state, label: false, type: "text", collection: Bug::STATES, :prompt => "Bug State"  %>
        </div>
        <div class="form-actions">
          <%= f.submit "Add a bug", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
