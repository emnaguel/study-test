<main class="content">
  <div class="container">
    <div class="title">
    <h2 class="text-left first-title"> Bugs list</h2>
    <%= link_to "New Bug", new_bug_path, class: "btn btn-secondary"  %>
    </div>
    <div class="row">
      <div class="col-12">

        <div class="card">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>State</th>
                  <th>Owner</th>
                  <th>Assigned</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @bugs.each do |bug| %>
                  <tr>
                   <td><%= bug.title %></td>
                   <td><%= bug.description %></td>
                   <td><%= bug.state %></td>
                   <td><%= bug.owner_bug %></td>
                   <td><%= bug.others.username %></td>
                   <td></td>
                   <td><%= link_to "Change user assignement", edit_bug_path(bug.id) %></td>
                <% end %>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>

  </div>
</main>
