<main class="content">
  <div class="container">
    <div class="title">
    <h2 class="text-left first-title"> Bugs list</h2>
    <%= link_to "New Bug", new_bug_path, class: "btn btn-secondary"  %>
    </div>
    <div class="row">
      <div class="col-12">

        <div class="card">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>State</th>
                  <th>Title</th>
                  <th>Description</th>

                  <th>Owner</th>
                  <th>Assigned</th>
                  <th>Severity</th>
                </tr>
              </thead>
              <tbody>
                <% @bugs.each do |bug| %>
                  <% if bug.state == "open" %>
                  <tr >
                    <td class = "open" ><%= bug.state %></td>
                   <td><%= bug.title %></td>
                   <td><%= bug.description %></td>

                   <td><%= bug.owner_bug %></td>
                   <td><%= bug.others.username %></td>
                   <td><%= bug.severity %></td>
                   <td><%= link_to "Edit", edit_bug_path(bug.id) %></td>
                  </tr>
                   <% elsif bug.state %>
                    <tr >
                      <td class = "assigned"><%= bug.state %></td>
                     <td><%= bug.title %></td>
                     <td><%= bug.description %></td>

                     <td><%= bug.owner_bug %></td>
                     <td><%= bug.others.username %></td>
                     <td><%= bug.severity %></td>
                     <td><%= link_to "Edit", edit_bug_path(bug.id) %></td>
                   </tr>
                    <% else %>
                    <tr>
                      <td class = "closed"><%= bug.state %></td>
                      <td><%= bug.title %></td>
                     <td><%= bug.description %></td>

                     <td><%= bug.owner_bug %></td>
                     <td><%= bug.others.username %></td>
                     <td><%= bug.severity %></td>
                     <td><%= link_to "Edit", edit_bug_path(bug.id) %></td>
                     </tr>
                <% end %>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>

  </div>
</main>
