<div class="navbar-study">
  <!-- Logo -->
  <a href="/" class="navbar-study-brand">
   <%= image_tag "http://www.jaimelesstartups.fr/wp-content/uploads/2017/10/logo-studyadvisor-300x44.png", class: "avatar dropdown-toggle", id: "navbar-study-menu", "data-toggle" => "dropdown" %>
 </a>
  <!-- Right Navigation -->
  <div class="navbar-study-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->


      <!-- Avatar with dropdown menu -->
      <div class="navbar-study-item">
        <div class="dropdown">

          <ul class="dropdown-menu dropdown-menu-right navbar-study-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>

            </li>
          </ul>
        </div>
      </div>



        <div>
          <%= link_to destroy_user_session_path, method: :delete, class: "navbar-study-item navbar-study-link" do %>
          <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>

        </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-study-item navbar-study-link" %>
    <% end %>
  </div>



</div>

